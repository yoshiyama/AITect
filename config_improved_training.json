{
  "training": {
    "num_epochs": 100,
    "batch_size": 8,
    "learning_rate": 0.001,
    "lr_scheduler": {
      "enabled": true,
      "type": "cosine",
      "warmup_epochs": 5,
      "min_lr": 0.00001
    },
    "image_size": 512,
    "save_interval": 10,
    "validation_interval": 5,
    "enable_monitoring": true,
    "loss_type": "mixed",
    "iou_weight": 2.0,
    "l1_weight": 1.0,
    "gradient_accumulation_steps": 2,
    "early_stopping": {
      "enabled": true,
      "patience": 15,
      "min_delta": 0.001
    }
  },
  "paths": {
    "train_images": "datasets/inaoka/train/JPEGImages",
    "train_annotations": "datasets/inaoka/train/annotations.json",
    "val_images": "datasets/inaoka/val/JPEGImages",
    "val_annotations": "datasets/inaoka/val/annotations.json",
    "model_save_path": "result/aitect_model_improved_training.pth"
  },
  "model": {
    "num_classes": 1,
    "grid_size": 16,
    "num_anchors": 3,
    "use_focal_loss": true,
    "focal_alpha": 0.25,
    "focal_gamma": 2.0,
    "model_type": "standard",
    "use_improved_loss": true,
    "anchor_optimization": true
  },
  "augmentation": {
    "enabled": true,
    "horizontal_flip": 0.5,
    "vertical_flip": 0.1,
    "color_jitter": {
      "brightness": 0.2,
      "contrast": 0.2,
      "saturation": 0.2,
      "hue": 0.1
    },
    "gaussian_noise": 0.1,
    "random_crop": {
      "enabled": true,
      "min_scale": 0.8,
      "max_scale": 1.0
    }
  },
  "evaluation": {
    "conf_threshold": 0.39,
    "iou_threshold": 0.5,
    "visualize_count": 10
  },
  "postprocess": {
    "use_soft_nms": true,
    "soft_nms_sigma": 0.5,
    "max_detections": 100
  }
}